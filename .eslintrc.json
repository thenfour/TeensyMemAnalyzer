{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./packages/analyzer/tsconfig.json"
        ],
        "tsconfigRootDir": "__dirname"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ]
}