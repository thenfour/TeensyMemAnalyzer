{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Memory Map Config",
    "type": "object",
    "required": [
        "targetId",
        "addressWindows",
        "hardwareBanks",
        "sectionCategories",
        "logicalBlocks",
        "sectionRules"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "targetId": {
            "type": "string"
        },
        "displayName": {
            "type": "string"
        },
        "notes": {
            "type": "string"
        },
        "addressWindows": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "baseAddress": {
                        "type": "number",
                        "minimum": 0
                    },
                    "sizeBytes": {
                        "type": "number",
                        "minimum": 0
                    },
                    "description": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    },
                    "reservations": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/addressWindowReservation"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "hardwareBanks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "capacityBytes",
                    "windowIds"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "capacityBytes": {
                        "type": "number",
                        "minimum": 0
                    },
                    "windowIds": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    },
                    "roundingRules": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/roundingRule"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "sectionCategories": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "logicalBlocks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "categoryId",
                    "windowId"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "categoryId": {
                        "type": "string"
                    },
                    "windowId": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "reportTags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "notes": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "sectionRules": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "match",
                    "categoryId"
                ],
                "properties": {
                    "match": {
                        "$ref": "#/definitions/sectionMatch"
                    },
                    "categoryId": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "reports": {
            "type": "object",
            "properties": {
                "teensySize": {
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "type": "object",
                            "required": [
                                "hardwareBankId"
                            ],
                            "properties": {
                                "hardwareBankId": {
                                    "type": "string"
                                },
                                "codeBlockIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "dataBlockIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "blockIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "tagBuckets": {
                                    "$ref": "#/definitions/tagBuckets"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "definitions": {
        "addressWindowReservation": {
            "type": "object",
            "required": [
                "id",
                "label",
                "sizeBytes",
                "startOffset"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "sizeBytes": {
                    "type": "number",
                    "minimum": 0
                },
                "startOffset": {
                    "type": "number",
                    "minimum": 0
                },
                "notes": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "roundingRule": {
            "type": "object",
            "required": [
                "granuleBytes",
                "mode"
            ],
            "properties": {
                "granuleBytes": {
                    "type": "number",
                    "minimum": 1
                },
                "mode": {
                    "type": "string",
                    "enum": [
                        "ceil",
                        "floor",
                        "nearest"
                    ]
                },
                "logicalBlockIds": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "sectionMatch": {
            "type": "object",
            "properties": {
                "equals": {
                    "type": "string"
                },
                "prefix": {
                    "type": "string"
                },
                "suffix": {
                    "type": "string"
                },
                "regex": {
                    "type": "string"
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        },
        "tagBuckets": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}