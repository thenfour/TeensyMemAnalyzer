{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Memory Map Config",
    "type": "object",
    "required": [
        "targetId",
        "regions"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "targetId": {
            "type": "string"
        },
        "displayName": {
            "type": "string"
        },
        "regions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "kind",
                    "start",
                    "size"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "kind": {
                        "type": "string",
                        "enum": [
                            "flash",
                            "code_ram",
                            "data_ram",
                            "dma_ram",
                            "ext_ram",
                            "other"
                        ]
                    },
                    "start": {
                        "type": "number",
                        "minimum": 0
                    },
                    "size": {
                        "type": "number",
                        "minimum": 0
                    },
                    "reserved": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "name",
                                "start",
                                "size"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "start": {
                                    "type": "number",
                                    "minimum": 0
                                },
                                "size": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            }
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "runtimeBanks": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "kind",
                    "segments"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "kind": {
                        "type": "string",
                        "enum": [
                            "flash",
                            "ram",
                            "external",
                            "other"
                        ]
                    },
                    "description": {
                        "type": "string"
                    },
                    "capacityBytes": {
                        "type": "number",
                        "minimum": 0
                    },
                    "segments": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "required": [
                                "regionId"
                            ],
                            "properties": {
                                "regionId": {
                                    "type": "string"
                                },
                                "start": {
                                    "type": "number",
                                    "minimum": 0
                                },
                                "size": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "runtimeGroups": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "bankIds"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "bankIds": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "reports": {
            "type": "object",
            "properties": {
                "teensySize": {
                    "type": "object",
                    "properties": {
                        "flash": {
                            "type": "object",
                            "properties": {
                                "groupId": {
                                    "type": "string"
                                },
                                "bankIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "sectionBreakdown": {
                                    "type": "object",
                                    "properties": {
                                        "headers": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "code": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "required": [
                                        "headers",
                                        "code",
                                        "data"
                                    ],
                                    "additionalProperties": false
                                }
                            },
                            "required": [
                                "sectionBreakdown"
                            ],
                            "anyOf": [
                                {
                                    "required": [
                                        "groupId"
                                    ]
                                },
                                {
                                    "required": [
                                        "bankIds"
                                    ]
                                }
                            ],
                            "additionalProperties": false
                        },
                        "ram1": {
                            "type": "object",
                            "properties": {
                                "groupId": {
                                    "type": "string"
                                },
                                "codeBankIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "dataBankIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "codeRoundingGranuleBytes": {
                                    "type": "number",
                                    "minimum": 0
                                },
                                "sharedCapacityBytes": {
                                    "type": "number",
                                    "minimum": 0
                                },
                                "dataCategories": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "code",
                                            "code_fast",
                                            "rodata",
                                            "data_init",
                                            "bss",
                                            "dma",
                                            "other"
                                        ]
                                    }
                                }
                            },
                            "required": [
                                "codeBankIds",
                                "dataBankIds"
                            ],
                            "additionalProperties": false
                        },
                        "ram2": {
                            "type": "object",
                            "properties": {
                                "groupId": {
                                    "type": "string"
                                },
                                "bankIds": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "variableCategories": {
                                    "type": "array",
                                    "minItems": 1,
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "code",
                                            "code_fast",
                                            "rodata",
                                            "data_init",
                                            "bss",
                                            "dma",
                                            "other"
                                        ]
                                    }
                                }
                            },
                            "anyOf": [
                                {
                                    "required": [
                                        "groupId"
                                    ]
                                },
                                {
                                    "required": [
                                        "bankIds"
                                    ]
                                }
                            ],
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}