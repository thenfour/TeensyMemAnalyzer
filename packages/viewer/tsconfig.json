{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "allowJs": false,
        "declaration": false,
        "declarationMap": false,
        "composite": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@analyzer": [
                "./src/analyzer/index.ts"
            ],
            "@analyzer/*": [
                "./src/analyzer/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}