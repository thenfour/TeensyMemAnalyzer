{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "outDir": "dist/server",
        "rootDir": "src",
        "allowJs": false,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/server/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}